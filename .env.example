
OPENAI_API_KEY=##APIKEY###
ANTHROPIC_API_KEY= ###APIKEY###

# LangSmith API Key

LANGSMITH_API_KEY=###APIKEY###
LANGSMITH_TRACING=true

LANGSMITH_PROJECT=scalable-agent-project

# LangSmith endpoint 
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com


# PayPal API Credentials
# Get from: https://developer.paypal.com/dashboard/applications
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox  # Use 'live' for production

# ChromaDB settings 
CHROMA_PERSIST_DIRECTORY=./chroma_db
CHROMA_COLLECTION_NAME=tool_embeddings

# Embedding model (default: all-MiniLM-L6-v2)
# Options: all-MiniLM-L6-v2, all-mpnet-base-v2, paraphrase-multilingual
EMBEDDING_MODEL=all-MiniLM-L6-v2

# ==============================================================================
# SYSTEM CONFIGURATION
# ==============================================================================

# Tool execution timeout (seconds)
TOOL_TIMEOUT_SECONDS=30

# Max tools to retrieve per query
MAX_TOOLS_RETRIEVAL=10

# Max tools per domain
MAX_TOOLS_PER_DOMAIN=15

# Environment (development/staging/production)
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=true

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================

# Enable RAG (Retrieval Augmented Generation)
ENABLE_RAG=true

# Enable system search
ENABLE_SYSTEM_SEARCH=true

# Enable error retry mechanism
ENABLE_RETRY=true
MAX_RETRY_ATTEMPTS=2

# Enable response caching
ENABLE_CACHE=false

